# ============================================
# CodeNex Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================
# Database Configuration (REQUIRED)
# ============================================
DATABASE_CONNECTION_STRING=Server=your-sql-server;Database=CodeNexDB;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# Alternative connection string name
# CONNECTION_STRING=Server=your-sql-server;Database=CodeNexDB;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# ============================================
# JWT Authentication (REQUIRED)
# ============================================
# IMPORTANT: Use a strong random key (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_KEY=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=CodeNexAPI
JWT_AUDIENCE=CodeNexAPI
JWT_EXPIRY_HOURS=24

# ============================================
# Admin User Configuration (REQUIRED)
# ============================================
# First admin user will be created automatically on startup
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=YourSecureAdminPassword123!

# ============================================
# Email Configuration (REQUIRED for notifications)
# ============================================
EmailSettings__Host=smtp.gmail.com
EmailSettings__Port=587
EmailSettings__FromEmail=noreply@yourdomain.com
EmailSettings__FromName=CodeNex
EmailSettings__Username=your-email@gmail.com
EmailSettings__Password=your-app-specific-password
EmailSettings__EnableSsl=true

# Alternative short form
# EMAIL_HOST=smtp.gmail.com

# ============================================
# Application Configuration
# ============================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:7150

# API Base URL (for email links and frontend)
API_BASE_URL=https://yourdomain.com

# Email verification requirement
REQUIRE_EMAIL_CONFIRMATION=true

# ============================================
# Security & CORS
# ============================================
# Content Security Policy (optional override)
# CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline';

# ============================================
# GitHub Integration (OPTIONAL)
# ============================================
# Required only if using GitHub repository features
# GITHUB_TOKEN=ghp_your_github_personal_access_token

# ============================================
# Stripe Payment Integration (OPTIONAL)
# ============================================
# Required only if using payment features
# Stripe__SecretKey=sk_test_your_stripe_secret_key
# Stripe__PublishableKey=pk_test_your_stripe_publishable_key

# ============================================
# Azure-specific Configuration (for Azure deployments)
# ============================================
# These are typically set in Azure Portal App Settings
# WEBSITE_HOSTNAME=your-app.azurewebsites.net
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection

# ============================================
# AWS-specific Configuration (for AWS deployments)
# ============================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================
# Docker/Container Configuration
# ============================================
# Port override (if needed)
# PORT=7150

# Container-specific settings
# DOTNET_RUNNING_IN_CONTAINER=true
