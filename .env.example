# Example environment file for Portfolio Backend
# Copy this to .env and fill in your actual values

# Database Configuration (required)
# Full connection string - takes precedence over appsettings
DATABASE_CONNECTION_STRING=Server=your_server;Database=your_database;User Id=your_username;Password=your_password;TrustServerCertificate=true;

# Alternative: Legacy environment variables (fallback)
# CONNECTION_STRING=Server=your_server;Database=your_database;User Id=your_username;Password=your_password;TrustServerCertificate=true;

# Admin User Credentials (optional - creates/overrides default admin user)
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=YourSecureAdminPassword123!

# Email Service Configuration (required for email functionality)
EmailSettings__Host=smtp.gmail.com
EmailSettings__Port=587
EmailSettings__FromEmail=your_email@gmail.com
EmailSettings__FromName=Portfolio - Your Name
EmailSettings__Username=your_email@gmail.com
EmailSettings__Password=your_gmail_app_password
EmailSettings__EnableSsl=true

# Optional: Email health check (matches EmailSettings__Host)
EMAIL_HOST=smtp.gmail.com

# Optional: Require email confirmation (true/false)
REQUIRE_EMAIL_CONFIRMATION=true

# JWT Configuration (recommended to set via environment)
JWT_KEY=your-256-bit-secret-jwt-key-replace-this-in-production
JWT_ISSUER=PortfolioAPI
JWT_AUDIENCE=PortfolioAPI
JWT_EXPIRY_HOURS=24

# API Base URL (optional - for frontend integration)
API_BASE_URL=https://your-domain.com/api
