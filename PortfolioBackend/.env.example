# Portfolio Backend Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Your domain name (without https://)
DOMAIN=localhost

# Administrator email for Let's Encrypt and notifications
LETSENCRYPT_EMAIL=admin@localhost

# Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# =============================================================================
# SSL/HTTPS CONFIGURATION
# =============================================================================

# Enable Let's Encrypt automatic certificate management
USE_LETS_ENCRYPT=false

# SSL Certificate password (leave empty for no password)
SSL_CERT_PASSWORD=

# Additional domains (comma-separated)
LETSENCRYPT_DOMAINS=localhost

# =============================================================================
# APPLICATION URLS
# =============================================================================

# Application listening URLs
ASPNETCORE_URLS=https://+:443;http://+:80

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://localhost:7151,http://localhost:7150

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_PATH=/app/data/PortfolioDB.sqlite

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Portfolio
EMAIL_USERNAME=your-email@gmail.com

# Email password (use App Password for Gmail)
EMAIL_PASSWORD=your-app-password

EMAIL_ENABLE_SSL=true

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT secret key (generate a secure random string)
JWT_KEY=your-very-secure-secret-key-that-is-at-least-256-bits-long

# JWT issuer and audience
JWT_ISSUER=CodenexSolutions
JWT_AUDIENCE=CodenexSolutions

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable HTTPS redirection
SECURITY_REQUIRE_HTTPS=true
SECURITY_USE_HTTPS_REDIRECTION=true
SECURITY_USE_HSTS=true

# HSTS max age in seconds (1 year = 31536000)
SECURITY_HSTS_MAX_AGE=31536000

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================

# Docker container name
CONTAINER_NAME=portfolio-backend

# Host ports for HTTP and HTTPS
HOST_HTTP_PORT=80
HOST_HTTPS_PORT=443

# Volume paths for persistent data
SSL_VOLUME_PATH=./ssl
DATA_VOLUME_PATH=./data
UPLOADS_VOLUME_PATH=./uploads
LOGS_VOLUME_PATH=./logs

# =============================================================================
# DEVELOPMENT CONFIGURATION (Override for local development)
# =============================================================================

# Uncomment these for local development
# ASPNETCORE_ENVIRONMENT=Development
# ASPNETCORE_URLS=https://localhost:7151;http://localhost:7150
# USE_LETS_ENCRYPT=false
# SECURITY_REQUIRE_HTTPS=false
# SECURITY_USE_HTTPS_REDIRECTION=false

# =============================================================================
# OPTIONAL SERVICES CONFIGURATION
# =============================================================================

# Enable Nginx reverse proxy
ENABLE_NGINX_PROXY=false

# Enable Traefik reverse proxy (for automatic SSL with Docker)
ENABLE_TRAEFIK=false

# Traefik dashboard port
TRAEFIK_DASHBOARD_PORT=8080

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable application insights or monitoring
ENABLE_MONITORING=false

# Log level (Trace, Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example for production deployment:
# DOMAIN=yourcompany.com
# LETSENCRYPT_EMAIL=admin@yourcompany.com
# USE_LETS_ENCRYPT=true
# EMAIL_PASSWORD=your-gmail-app-password
# JWT_KEY=your-super-secure-random-jwt-secret-key-256-bits-minimum

# Example for staging deployment:
# DOMAIN=staging.yourcompany.com
# ASPNETCORE_ENVIRONMENT=Staging
# ASPNETCORE_URLS=https://+:5001;http://+:5000

# Example for development:
# ASPNETCORE_ENVIRONMENT=Development
# ASPNETCORE_URLS=https://localhost:7151;http://localhost:7150
# USE_LETS_ENCRYPT=false
# SECURITY_REQUIRE_HTTPS=false
