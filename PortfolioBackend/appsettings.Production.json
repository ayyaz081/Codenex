  "EmailSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "FromEmail": "ayyaz081@gmail.com",
    "FromName": "Portfolio - Ayyaz Ahmad",
    "Username": "ayyaz081@gmail.com",
    "Password": "your-gmail-app-password-here",
    "EnableSsl": true
