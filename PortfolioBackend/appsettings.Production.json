{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error",
      "Microsoft.AspNetCore.Authentication": "Warning",
      "Microsoft.AspNetCore.Authorization": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
      "LogLevel": {
        "Default": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [],
  "CORS": {
    "AllowedOrigins": [],
    "AllowCredentials": true,
    "AllowAnyOrigin": false
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/PortfolioDB.sqlite"
  },
  "Jwt": {
    "Key": "",
    "Issuer": "PortfolioAPI",
    "Audience": "PortfolioAPI",
    "ExpiryHours": "24"
  },
  "Security": {
    "RequireHttps": true,
    "UseHSTS": true,
    "HSTSMaxAge": 31536000,
    "UseHttpsRedirection": true
  },
  "EmailSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "FromEmail": "",
    "FromName": "Portfolio",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "YouTube": {
    "ApiKey": "",
    "ChannelId": ""
  },
  "RateLimiting": {
    "RequestsPerMinute": 60,
    "RequestsPerHour": 1000,
    "BurstCapacity": 10
  },
  "Caching": {
    "ResponseCacheMaxAge": 3600,
    "StaticFilesMaxAge": 2592000
  }
}
